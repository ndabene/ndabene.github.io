---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }} - Past Articles</title>
    <description>{{ site.description | xml_escape }} - Past articles archive</description>
    <link>{{ site.url }}{{ site.baseurl }}/en/</link>
    <atom:link href="{{ site.url }}{{ site.baseurl }}/past_post_en.xml" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    <language>en</language>
    {% comment %} English articles published (not future ones or those hidden with hide_until_published) {% endcomment %}
    {% assign all_posts = site.posts_en | sort: "date" | reverse %}
    {% for post in all_posts %}
      {% comment %} Hide only if hide_until_published is true AND the date is in the future {% endcomment %}
      {% if post.hide_until_published != true or post.date <= site.time %}
        <item>
          <title>{{ post.title | xml_escape }}</title>
          <description>{{ post.content | xml_escape }}</description>
          <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
          <link>{{ site.url }}{{ site.baseurl }}{{ post.url }}</link>
          <guid isPermaLink="true">{{ site.url }}{{ site.baseurl }}{{ post.url }}</guid>
          {% for tag in post.tags %}
          <category>{{ tag | xml_escape }}</category>
          {% endfor %}
          {% for cat in post.categories %}
          <category>{{ cat | xml_escape }}</category>
          {% endfor %}
        </item>
      {% endif %}
    {% endfor %}
  </channel>
</rss>
