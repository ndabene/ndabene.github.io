---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:media="http://search.yahoo.com/mrss/" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ site.title | xml_escape }} - LinkedIn Feed</title>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <description>{{ site.description | xml_escape }}</description>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <language>fr</language>

    {% comment %} Filtrer uniquement les posts avec linkedin: true {% endcomment %}
    {% assign linkedin_posts = site.posts | where_exp: "post", "post.linkedin == true" | sort: "date" | reverse %}

    {% for post in linkedin_posts limit:10 %}
    <item>
      <title>{{ post.title | xml_escape }}</title>
      <link>{{ site.url }}{{ site.baseurl }}{{ post.url }}</link>
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      <guid isPermaLink="true">{{ site.url }}{{ site.baseurl }}{{ post.url }}</guid>

      {% comment %} Balise personnalisée pour faciliter l'extraction dans n8n {% endcomment %}
      {% if post.image %}
      <image_url>{{ site.url }}{{ site.baseurl }}{{ post.image }}</image_url>
      <enclosure url="{{ site.url }}{{ site.baseurl }}{{ post.image }}" type="image/jpeg" length="0" />
      {% endif %}

      <description>
        <![CDATA[
          {{ post.excerpt | strip_html | strip_newlines | truncate: 300 }}

          {% if post.tags %}

#{{ post.tags | join: ' #' }}{% endif %}
        ]]>
      </description>

      {% comment %} Catégories et tags {% endcomment %}
      {% for tag in post.tags %}
      <category>{{ tag | xml_escape }}</category>
      {% endfor %}
      {% for cat in post.categories %}
      <category>{{ cat | xml_escape }}</category>
      {% endfor %}
    </item>
    {% endfor %}
  </channel>
</rss>
