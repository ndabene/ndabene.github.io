---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
{% assign pages_sitemap = site.pages | where: "name", "sitemap_pages.xml" | first %}
{% assign posts_sitemap = site.pages | where: "name", "sitemap_posts.xml" | first %}
{% assign projects_sitemap = site.pages | where: "name", "sitemap_projects.xml" | first %}
{% assign case_studies_sitemap = site.pages | where: "name", "sitemap_case_studies.xml" | first %}
<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% assign last = pages_sitemap.last_modified_at | default: pages_sitemap.date | default: site.time %}
  <sitemap>
    <loc>{{ site.url }}/sitemap_pages.xml</loc>
    <lastmod>{{ last | date: "%Y-%m-%dT%H:%M:%S%:z" }}</lastmod>
  </sitemap>
  {% assign years = site.posts | group_by_exp: "post", "post.date | date: '%Y'" | sort: "name" | reverse %}
  {% for year in years %}
  {% assign last = posts_sitemap.last_modified_at | default: posts_sitemap.date | default: site.time %}
  <sitemap>
    <loc>{{ site.url }}/sitemap_posts.xml</loc>
    <lastmod>{{ last | date: "%Y-%m-%dT%H:%M:%S%:z" }}</lastmod>
  </sitemap>
  {% endfor %}
  {% assign last = projects_sitemap.last_modified_at | default: projects_sitemap.date | default: site.time %}
  <sitemap>
    <loc>{{ site.url }}/sitemap_projects.xml</loc>
    <lastmod>{{ last | date: "%Y-%m-%dT%H:%M:%S%:z" }}</lastmod>
  </sitemap>
  {% assign last = case_studies_sitemap.last_modified_at | default: case_studies_sitemap.date | default: site.time %}
  <sitemap>
    <loc>{{ site.url }}/sitemap_case_studies.xml</loc>
    <lastmod>{{ last | date: "%Y-%m-%dT%H:%M:%S%:z" }}</lastmod>
  </sitemap>
  {% assign last = site.time %}
  <sitemap>
    <loc>{{ site.url }}/sitemap_images.xml</loc>
    <lastmod>{{ last | date: "%Y-%m-%dT%H:%M:%S%:z" }}</lastmod>
  </sitemap>
</sitemapindex>
