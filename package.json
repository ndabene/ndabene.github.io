{
  "name": "ndabene-portfolio",
  "version": "1.0.0",
  "description": "Portfolio de Nicolas Dabène - Senior PHP Developer & AI Orchestrator",
  "scripts": {
    "build": "bundle exec jekyll build --config _config.yml,_config_github.yml",
    "serve": "bundle exec jekyll serve --port 4000",
    "dev": "bundle exec jekyll serve --config _config.yml,_config_dev.yml --limit_posts 5 --port 4000",
    "clean": "bundle exec jekyll clean",
    "validate:produits": "ruby scripts/validate_produits.rb",
    "validate:frontmatter": "ruby scripts/validate_frontmatter.rb",
    "generate:webp": "node scripts/generate-webp.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ndabene/nicolas-dabene.fr.git"
  },
  "author": "Nicolas Dabène",
  "license": "MIT",
  "devDependencies": {
    "sharp": "^0.34.5",
    "watch": "^1.0.2"
  }
}